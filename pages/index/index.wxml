   <text class='question_title'>{{i}}„ÄÅ{{title}}</text>
   <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio">
     <view class='answer_list' wx:for="{{answer}}">
      <radio value="{{item}}" checked="" style='zoom:75%' />
